@import "minimal-mistakes/skins/default";
@import "minimal-mistakes";


/* 1) Masthead: full-width burgundy */
.masthead { background: #800020 !important; }

.masthead__inner-wrap,
.masthead .wrapper,
.masthead .masthead__menu {
  max-width: 100% !important;
  width: 100% !important;
  margin: 0 !important;
  padding-left: 0 !important;
  padding-right: 0 !important;
}

/* Nav “pill” → transparent */
.masthead .greedy-nav {
  background: transparent !important;
  border-radius: 0 !important;
  box-shadow: none !important;
  display: flex; align-items: center;
  margin: 0 !important;
}

/* Links left, title right; white text */
.masthead .greedy-nav .visible-links { order: 1 !important; }
.masthead .greedy-nav .site-title    { order: 2 !important; margin-left: auto !important; }
.masthead .greedy-nav a,
.masthead .greedy-nav .site-title { color: #fff !important; }

/* Hamburger: simple white lines, no pill */
.masthead .greedy-nav__toggle{
  position:absolute; left:16px; top:50%; transform:translateY(-50%);
  width:28px; height:22px; padding:0; margin:0;
  background:transparent !important; border:0 !important; border-radius:0 !important; box-shadow:none !important;
  outline:none !important; cursor:pointer;
}
.masthead .greedy-nav__toggle::before,
.masthead .greedy-nav__toggle::after{
  content:""; position:absolute; left:0; width:100%; height:2px; background:#fff;
}
.masthead .greedy-nav__toggle::before{ top:4px; }
.masthead .greedy-nav__toggle::after { bottom:4px; }
.masthead .greedy-nav__toggle span{
  position:absolute; left:0; top:50%; transform:translateY(-50%);
  display:block; width:100%; height:2px; background:#fff;
}
.masthead .greedy-nav__toggle{ display:block !important; }

.masthead .site-logo { display: none !important; }

/* 2) Hero card + backdrop band */
.home-hero { position: relative; background: transparent !important; }

.hero {
  display: grid;
  grid-template-columns: 1.1fr 0.9fr;
  gap: 2rem;
  align-items: center;
  background: #fff;
  border-radius: 18px;
  padding: 3rem;
  margin: 2rem 0;
  box-shadow: 0 12px 30px rgba(0,0,0,.08);
}

.eyebrow { color:#6b7280; font-weight:600; letter-spacing:.02em; margin:0 0 .25rem; }
.hero .lead { color:#6b7280; max-width:38ch; }

.hero__image img {
  width: min(480px, 100%);
  max-width: 100%;
  aspect-ratio: 1 / 1;
  object-fit: cover;
  border-radius: 50%;
  border: none;
  box-shadow: 0 10px 25px rgba(0,0,0,.12);
}

/* Name accent */
.hero .accent { color: #800020 !important; }
.hero h1 { color: #800020; }

/* Background band behind hero */
.home-hero::before {
  content: "";
  position: absolute; inset: 0 auto auto 0;
  right: 0; top: 0; left: 0;
  height: 360px;
  background:
    linear-gradient(to bottom, rgba(128,0,32,.25), rgba(128,0,32,0)),
    url("{{ '/images/home-bg.jpg' | relative_url }}") center/cover no-repeat;
  z-index: 0;
  border-bottom-left-radius: 28px;
  border-bottom-right-radius: 28px;
}
.home-hero .hero { position: relative; z-index: 1; }

.hero__actions .btn { margin-right: .5rem; }
.hero__actions .btn--light-outline {
  border-color: rgba(128,0,32,.30);
  color: #800020;
}
.hero__actions .btn--light-outline:hover {
  background: rgba(128,0,32,.06);
}

/* 3) About page sidebar */
.author__avatar img {
  width: 120px; height: 120px;
  object-fit: cover;
  border-radius: 50% !important;
  border: none;
}
.author__bio { font-size: .95rem; line-height: 1.55; }

/* 4) Archive/portfolio cards */
.archive .list__item{
  display:grid;
  grid-template-columns: 240px 1fr;
  gap:1.25rem;
  align-items:start;
  padding:1rem 1.25rem;
  margin:1rem 0;
  background:#fff;
  border-radius:12px;
  box-shadow:0 6px 18px rgba(0,0,0,.06);
}
.archive .list__item .archive__item-teaser{
  width:100%; height:160px; overflow:hidden; border-radius:10px;
}
.archive .list__item .archive__item-teaser img{
  width:100%; height:100%; object-fit:cover;
}

/* Avoid :has() for broader compatibility; use a helper class instead if needed */
/* .archive .list__item:not(:has(.archive__item-teaser)){ ... } */

@media (max-width: 720px){
  .archive .list__item{ grid-template-columns:1fr; }
  .archive .list__item .archive__item-teaser{ height:200px; }
}

/* 5) Burgundy, fully painted button (for “See my work”) */
.btn--burgundy {
  background: #800020 !important;
  color: #fff !important;
  border-color: #800020 !important;
}
.btn--burgundy:hover,
.btn--burgundy:focus {
  background: #6d001b !important;   /* slightly darker on hover */
  border-color: #6d001b !important;
  color: #fff !important;
}
